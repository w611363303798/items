@charset "utf-8";
.mb0-i{
	margin-bottom: 0!important;
}
.red{
	color: red;
	opacity: 1!important;
}
#register{
	border-top: 2px solid #ddd;
}
.container{
	margin: 0 auto;
	width: 1190px;
	height: 690px;
}
.con{
	margin-top: 40px;
	font-size: 14px;
}
#register .register-list{
	margin-bottom: 20px;
	padding-left: 205px;
	width: 985px;
	height: 38px;
}
#register .register-list .register-list-group{
	position: relative;
	float: left;
	width: 420px;
}
#register .register-list .register-list-tips{
	height: 38px;
	line-height: 38px;
	width: 400px;
	overflow: hidden;
	float: left;
	margin-left: 10px;
	display: none;
	opacity: .5;
}
#register .register-list .register-list-group .notnull{
	float: left;
	height: 38px;
	line-height: 38px;
	width: 100px;
	text-align: right;
}
#register .register-list .register-list-group .notnull i{
	padding-right: 5px;
}
#register .register-list .register-list-group .form-control{
	border: 1px solid #e4e4e4;
	width: 306px;
	float: left;
	height: 28px;
	line-height: 28px;
	padding: 4px 6px;
	outline: none;
}
#register .register-list .register-list-group .codeipt{
	width: 201px;
}
#register .register-list .register-list-group .code{
	position: absolute;
	right: 0;
	top: 0;
	z-index: 1;
	background: #F2F2F2;
	width: 100px;
	height: 38px;
	cursor: pointer;
	text-align: center;
	overflow: hidden;
	font-size: 24px;
	line-height: 38px;
	font-weight: 900;
	font-style: oblique;
}
#register .register-list .register-list-group #phonecode{
	font-size: 14px;
	font-style: normal;
	font-weight: 100;
}
#register .register-list .register-list-group .select-menu{
	position: absolute;
	right: 0;
	top: 0;
	opacity: 0.3;
	width: 14px;
	height: 36px;
	padding: 0 7px;
	border-left: 1px solid #e4e4e4;
	line-height: 36px;
	cursor: pointer;
}
#register .register-list .register-list-group .select-list{
	border: 1px solid #e4e4e4;
	padding: 5px 10px 10px;
	width: 298px;
	position: absolute;
	right: 0;
	top: 36px;
	background: #fff;
	z-index: 2;
	display: none;
}
#register .register-list .register-list-group .select-list li{
	width: 100%;
	float: left;
	height: 21px;
	line-height: 21px;
}
#register .register-list .register-list-group .select-list li:hover{
	background: #f0ffff;
}
#register .register-form-submit{
	width: 320px;
	margin-left: 305px;
}
#register .register-form-submit input{
	color: #fff;
	background: #0979E9;
	width: 320px;
	height: 40px;
	padding: 4px 13px 5px;
	border: 0;
	cursor: pointer;
}
#register .register-form-submit input:hover{
	opacity: .8;
}




