		<script type="text/javascript">
			//随机验证码
			$("#code").html(code(4));
			$("#code").click(function(){
				$("#code").html(code(4));
			})
			//支持中文、字母、数字和下划线，4-20个字符
			$("#userName").focus(function(){
				$(this).parent().siblings().css("display","block").removeClass("red");
			})
			$("#userName").blur(function(){
				var user = $("#userName").val();
				var myReg = /^[\u2E80-\u9FFF\w_]{4,20}$/;
				if(!myReg.test(user)){
					$(this).parent().siblings().css("display","block").addClass("red");
				}else{
					$(this).parent().siblings().css("display","none");
				}
			})
			//邮箱
			$("#email").focus(function(){
				$(this).parent().siblings().eq(0).css("display","block");
				$(this).parent().siblings().eq(1).css("display","none");
			})
			$("#email").blur(function(){
				var mail = $("#email").val();
				var myReg = /^([a-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})$/;
				if(!myReg.test(mail)){
					$(this).parent().siblings().eq(0).css("display","none");
					$(this).parent().siblings().eq(1).css("display","block");
				}else{
					$(this).parent().siblings().eq(0).css("display","none");
					$(this).parent().siblings().eq(1).css("display","none");
				}
			})
			//手机号码
			 $("#phone").focus(function(){
			 	$(this).parent().siblings().eq(0).css("display","block");
			 	$(this).parent().siblings().eq(1).css("display","none");
			 })
			 $("#phone").blur(function(){
			 	var phone = $("#phone").val();
			 	var myReg = /^1[34578]\d{9}$/;
			 	if(!myReg.test(phone)){
			 		$(this).parent().siblings().eq(0).css("display","none");
					$(this).parent().siblings().eq(1).css("display","block");
			 	}else{
			 		$(this).parent().siblings().eq(0).css("display","none");
					$(this).parent().siblings().eq(1).css("display","none");
			 	}
			 })
			 //验证码
			 $("#Code").blur(function(){
			 	var code = $("#Code").val();
			 	if(code.toUpperCase() != $("#code").html()){
			 		$(this).parent().siblings().css("display","block");
			 	}else{
			 		$(this).parent().siblings().css("display","none");
			 	}
			 })
			 //密码长为6-20位，可由英文、数字和下划线组成
			 var pw;
			 $("#passWord").blur(function(){
			 	pw = $("#passWord").val();
			 	var myReg = /^\w{6,20}$/;
			 	if(!myReg.test(pw)){
			 		$(this).parent().siblings().css("display","block")
			 	}else{
			 		$(this).parent().siblings().css("display","none")
			 	}
			 })
			 //确认密码
			 $("#confirmpw").blur(function(){
			 	var oPw = $("#confirmpw").val();
			 	if(oPw != pw){
			 		$(this).parent().siblings().css("display","block")
			 	}else{
			 		$(this).parent().siblings().css("display","none")
			 	}
			 })
			 //下拉菜单
			 $(".select,.select-menu").click(function(e){
			 	e.stopPropagation();
			 	$(".select-list").css("display","none")
			 	$(this).siblings(".select-list").css("display","block")
			 })
			 $(document).click(function(){
			 	$(".select-list").css("display","none")
			 })
			 $(".select-list li").click(function(){
			 	$(this).parent().parent().siblings("input").val($(this).children().html())
			 })
		</script>
